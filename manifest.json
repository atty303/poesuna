{
    "name": "PoEsuna",
    "version": "1.0.0",
    "manifest_version": 2,

    "description": "Take a screen shot from the web site for Path of Exile.",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },

    "permissions": ["tabs", "storage", "http://www.pathofexile.com/", "https://www.pathofexile.com/"],
    "content_scripts": [
        {
            "matches": ["http://www.pathofexile.com/*", "https://www.pathofexile.com/*"],
            "js": ["lib/jquery.min.js", "content.js"]
        }
    ],
    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false
    },
    "options_page": "options.html"
}